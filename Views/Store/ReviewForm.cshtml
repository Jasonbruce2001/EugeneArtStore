@{
    ViewData["Title"] = "Write Review";
}

<div class="container-fluid">
    <div class="row mb-5">
        <div class="col-1">
            <a asp-action="Details" asp-route-id="@ViewData["ProductId"]" class="btn btn-primary">Back</a>
        </div>
        <div class="col-10 text-center">
            <h1>Add a Review</h1>
        </div>
        <div class="col-1">
            
        </div>
    </div>

    <!-- Form input -->
    <div class="formArea">
        <form method="post">
            <div class="row">
                <input type="hidden" name="ProductId" value ="@ViewData["ProductId"]" />
                <label for="Rating">Rating (1-10):</label>
                <input type="number" required id="Rating" name="Rating" min="1" max="10"><br/>

                <label for="Content">Comments:</label>
                <textarea required id="Content" name="Content" placeholder="300 Characters Max"></textarea>
            </div>
            <div class="row text-end mt-2">
                <div class="col"><input type="submit" value="Submit"></div>
            </div>
        </form>
    </div>
</div>